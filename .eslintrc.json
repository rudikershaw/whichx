{
    "plugins": ["mocha"],
    "extends": ["standard", "plugin:mocha/recommended"],
    "env": {
        "commonjs": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "indent": ["error", 4],
        "space-before-function-paren": ["error", "never"],
        "quotes": [2, "double"],
        "semi": ["error", "always"]
    }
}